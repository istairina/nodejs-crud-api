{
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "target": "es6",
      "sourceMap": true,
      "outDir": "dist",
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "allowImportingTsExtensions": true,
      "emitDeclarationOnly": true,
      "declaration": true,
      "composite": true
    },
    "lib": ["es2020"],
    "include": ["**/*", "src"],
    "exclude": ["node_modules", "dist"],
  }
  