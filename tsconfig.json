{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ESNext",
    "sourceMap": false,
    "outDir": "dist",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    // "allowImportingTsExtensions": true,
    // "emitDeclarationOnly": false,
    // "noEmit": true,
    "declaration": false,
    // "composite": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
  },
  "lib": ["ESNext"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
